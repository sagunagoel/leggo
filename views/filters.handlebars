  <script src="js/bootstrap.js"></script>
  <script src='js/filters.js'></script>
  <script src='js/swipe.js'></script>
  <script src='js/iscroll-probe.js'></script>
  
  <script>
    $(document).ready( function () {
      leggo.initializePage();
    });
  </script>
